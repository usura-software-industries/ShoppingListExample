<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	android:id="@+id/shoppingListElementLayout"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginBottom="1dp"
	android:orientation="horizontal">

	<android.support.v7.widget.AppCompatImageView
		android:id="@+id/deleteShoppingElement"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_gravity="center_vertical"
		android:layout_marginStart="@dimen/half_size"
		android:padding="@dimen/quarter_size"
		android:tint="@color/red"
		app:srcCompat="@drawable/ic_clear_black_24dp" />

	<View
		android:id="@+id/shoppingListInnerDivider"
		android:layout_width="1dp"
		android:layout_height="match_parent"
		android:layout_marginBottom="@dimen/quarter_size"
		android:layout_marginEnd="@dimen/half_size"
		android:layout_marginStart="@dimen/half_size"
		android:layout_marginTop="@dimen/quarter_size"
		android:background="@color/gray" />

	<TextView
		android:id="@+id/elementTitle"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_gravity="start|center"
		android:layout_marginEnd="8dp"
		android:layout_marginStart="@dimen/half_size"
		android:layout_weight="1"
		android:ellipsize="end"
		android:gravity="start|center"
		android:maxLines="1"
		android:paddingBottom="@dimen/standard_size"
		android:paddingTop="@dimen/standard_size"
		android:singleLine="true"
		android:textColor="@color/black"
		android:textSize="16sp" />

</LinearLayout>